@model IEnumerable<NewsPortal.Data.Model.Category>
@{
    ViewBag.Title = "Kategori Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <!-- Responsive table -->
        <div class="col-md-12">
            <div class="panel panel-default">
                <header class="panel-heading">@ViewBag.Title</header>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Adı</th>
                                    <th>Üst Kategori</th>
                                    <th>Durum</th>
                                    <th>Ekleyen</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><span class="label label-success">@item.ID</span></td>
                                        <td>@item.Name</td>
                                        <td>@item.ParentId</td>
                                        <td>
                                            @if (item.Active == true)
                                            {
                                                <b class="label label-success">Aktif</b>
                                            }
                                            else
                                            {
                                                <b class="label label-danger">Pasif</b>
                                            }
                                        <td>@item.User.LastName</td>
                                        <td>
                                            <button class="btn btn-default btn-sm">Düzenle</button>
                                            @Html.ActionLink("Sil", "Delete", new { ID = item.ID }, new { onclick="return confirm('Silmek istediğinize emin misiniz?')" })
                                            @*<button class="btn btn-default btn-sm">Sil</button>*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Responsive table -->
    </div>
</div>